<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reti.com.passwordmanager.AddNewCategory">

    <TextView
        android:id="@+id/fixLabel_addCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/category_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_categoryName_addCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="@string/category_add_hint"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/iv_category_create"
        app:layout_constraintRight_toLeftOf="@+id/bt_addCategory"
        app:layout_constraintTop_toBottomOf="@+id/fixLabel_addCategory" />

    <Button
        android:id="@+id/bt_addCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/generic_createMessage"
        app:layout_constraintBottom_toBottomOf="@+id/et_categoryName_addCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_categoryName_addCategory" />

    <ImageView
        android:id="@+id/iv_category_create"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_unchecked"
        app:layout_constraintTop_toTopOf="@+id/et_categoryName_addCategory"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_categoryName_addCategory"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/sp_category_manageCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/et_categoryName_addCategory"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/et_categoryName_addCategory"
        app:layout_constraintLeft_toRightOf="@+id/iv_category_delete"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/bt_deleteCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/generic_deleteMessage"
        app:layout_constraintBottom_toBottomOf="@+id/sp_category_manageCategory"
        app:layout_constraintLeft_toLeftOf="@+id/bt_addCategory"
        app:layout_constraintRight_toRightOf="@+id/bt_addCategory"
        app:layout_constraintTop_toTopOf="@+id/sp_category_manageCategory" />

    <ImageView
        android:id="@+id/iv_category_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_unchecked"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_category_manageCategory"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_category_manageCategory"
        android:layout_marginBottom="0dp" />

    <ImageView
        android:id="@+id/iv_firstCategory"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_firstCategory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_firstCategory"
        app:srcCompat="@drawable/ic_unchecked" />

    <ImageView
        android:id="@+id/iv_secondCategory"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_secondCategory"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sp_secondCategory"
        app:srcCompat="@drawable/ic_unchecked" />

    <Spinner
        android:id="@+id/sp_firstCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/et_categoryName_addCategory"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/sp_category_manageCategory"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/sp_category_manageCategory" />

    <Spinner
        android:id="@+id/sp_secondCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/sp_category_manageCategory"
        app:layout_constraintRight_toRightOf="@+id/et_categoryName_addCategory"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/category_moveButton"
        app:layout_constraintBottom_toBottomOf="@+id/sp_secondCategory"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/bt_deleteCategory"
        app:layout_constraintRight_toRightOf="@+id/bt_deleteCategory"
        app:layout_constraintTop_toTopOf="@+id/sp_firstCategory" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/category_moveText"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="@+id/sp_firstCategory"
        app:layout_constraintRight_toRightOf="@+id/sp_firstCategory"
        app:layout_constraintTop_toBottomOf="@+id/sp_firstCategory" />
</android.support.constraint.ConstraintLayout>
