<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="reti.com.passwordmanager.SettingsActivity">

    <LinearLayout
        android:id="@+id/setting_linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonResetPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_resetPin" />

        <LinearLayout
            android:id="@+id/setting_linearlayout_pin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/oldPinET"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:hint="@string/setting_oldpin_hint"
                    android:inputType="numberPassword" />

                <ImageView
                    android:id="@+id/iv_oldPin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"
                    app:srcCompat="@drawable/ic_unchecked" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newPinET1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="@string/setting_newpin_hint"
                    android:inputType="numberPassword" />

                <ImageView
                    android:id="@+id/iv_newPin1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"

                    app:srcCompat="@drawable/ic_unchecked" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/newPinET2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:hint="@string/setting_newpin_hint"
                    android:inputType="numberPassword" />

                <ImageView
                    android:id="@+id/iv_newPin2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintBottom_toBottomOf="@+id/newPinET2"
                    app:layout_constraintLeft_toRightOf="@+id/newPinET2"
                    app:layout_constraintTop_toTopOf="@+id/newPinET2"
                    app:srcCompat="@drawable/ic_unchecked" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonConfirmPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/generic_confirmMessage"
                app:layout_constraintBottom_toBottomOf="@+id/oldPinET"
                app:layout_constraintLeft_toRightOf="@+id/iv_oldPin"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldPinET"
                app:layout_constraintVertical_bias="0.5" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_changeTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_changeColorTheme"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_esportaPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_export" />

        <Button
            android:id="@+id/setting_btn_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_import" />

        <Button
            android:id="@+id/setting_btn_exportTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_exportTXT" />

        <Button
            android:id="@+id/setting_btn_importTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="32dp"
            android:text="@string/setting_button_importTXT" />

    </LinearLayout>

</ScrollView>