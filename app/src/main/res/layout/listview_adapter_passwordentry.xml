<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_domain_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backDomain"
        app:layout_constraintLeft_toLeftOf="@+id/iv_backDomain"
        app:layout_constraintRight_toLeftOf="@+id/iv_backSeparator"
        app:layout_constraintTop_toTopOf="@+id/iv_backDomain"
        tools:text="Domain" />

    <TextView
        android:id="@+id/tv_username_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backUser"
        app:layout_constraintLeft_toRightOf="@+id/iv_backSeparator"
        app:layout_constraintRight_toRightOf="@+id/iv_backUser"
        app:layout_constraintTop_toTopOf="@+id/iv_backUser"
        tools:text="Username" />

    <ImageView
        android:id="@+id/iv_backDomain"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:elevation="1dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/iv_backList"
        app:layout_constraintRight_toLeftOf="@+id/iv_backSeparator"
        app:layout_constraintTop_toTopOf="@+id/iv_backList"
        app:srcCompat="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backList"
        android:layout_marginBottom="3dp" />

    <ImageView
        android:id="@+id/iv_backUser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="0dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backSeparator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/iv_backSeparator"
        app:layout_constraintRight_toRightOf="@+id/iv_backList"
        app:layout_constraintTop_toTopOf="@+id/iv_backDomain"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/iv_backSeparator"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_backDomain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_backDomain"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorAccent" />

    <ImageView
        android:id="@+id/iv_backList"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

</android.support.constraint.ConstraintLayout>